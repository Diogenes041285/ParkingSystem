@model IEnumerable<ParkingSystem.App.ViewModels.ManobraViewModel>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Manobrista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHoraEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHoraSaida)
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Manobrista.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carro.Placa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataHoraEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataHoraSaida)
            </td>            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
