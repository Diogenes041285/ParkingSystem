@model ParkingSystem.App.ViewModels.ManobraViewModel

@{
	ViewData["Title"] = "Create";
}

<h3>Cadastro</h3>

<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="ManobristaId" class="control-label"></label>
				<select asp-for="ManobristaId" class="form-control" asp-items="@(new SelectList(Model.Manobristas, "Id", "Nome"))">
					<option></option>
				</select>
			</div>
			<div class="form-group">
				<label asp-for="CarroId" class="control-label"></label>
				<select asp-for="CarroId" class="form-control" asp-items="@(new SelectList(Model.Carros, "Id", "Placa"))">
					<option></option>
				</select>
			</div>
			<div class="form-group">
				<label asp-for="DataHoraEntrada" class="control-label"></label>
				<input asp-for="DataHoraEntrada" class="form-control" />
				<span asp-validation-for="DataHoraEntrada" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DataHoraSaida" class="control-label"></label>
				<input asp-for="DataHoraSaida" class="form-control" />
				<span asp-validation-for="DataHoraSaida" class="text-danger"></span>
			</div>
			<div class="form-group form-check">
				<label class="form-check-label">
					<input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
				</label>
			</div>
			<div class="form-group">
				<input type="submit" value="Salvar" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Voltar</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
